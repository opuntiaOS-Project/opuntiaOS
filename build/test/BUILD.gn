group("test") {
  deps = []

  # If we run test, let's include the entry point.
  if (test_method == "tests") {
    deps += [
      "//test/runner:launch_server",
      "//test/kernel:test_kernel",
    ]
  }

  if (test_method == "bench") {
    deps += [ "//test/bench:launch_server" ]
  }
}
