declare_args() {
  is_debug = true
  optimize = true
  kernel_symbols = true
  userland_symbols = true
  static_analyze = false
}

if (target_cpu == "") {
  target_cpu = "x86"
}
if (target_cpu == "arm") {
  target_cpu = "aarch32"
}

set_default_toolchain("//toolchains:cross-compiler")
